<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLight">

    <Button
        android:id="@+id/playSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="32dp"
        android:text="@string/play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descriptionRecording"
        app:layout_constraintBottom_toTopOf="@+id/isRecordingText"
        app:layout_constraintEnd_toEndOf="@+id/recordingButton"
        app:layout_constraintStart_toStartOf="@+id/recordingButton" />

    <TextView
        android:id="@+id/isRecordingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/isRecordingText"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/chronometer"
        app:layout_constraintEnd_toEndOf="@+id/descriptionRecording"
        app:layout_constraintStart_toStartOf="@+id/descriptionRecording" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="00:00"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/isRecordingText"
        app:layout_constraintStart_toStartOf="@+id/isRecordingText" />

    <Button
        android:id="@+id/saveFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:text="@string/saveFile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playSound"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/descriptionUploading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descriptionUploading"
        app:layout_constraintBottom_toTopOf="@+id/isRecordingText"
        app:layout_constraintEnd_toEndOf="@+id/uploadingButton"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="@+id/uploadingButton"
        app:layout_constraintTop_toTopOf="@+id/descriptionRecording" />

    <ImageButton
        android:id="@+id/uploadingButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        android:foreground="@drawable/add_music_multimedia_svgrepo_com_noire"
        app:layout_constraintBottom_toBottomOf="@+id/recordingButton"
        app:layout_constraintEnd_toStartOf="@+id/playSound"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recordingButton"
        app:layout_constraintVertical_bias="0.604" />

    <ImageButton
        android:id="@+id/recordingButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        android:foreground="@drawable/images"
        app:layout_constraintBottom_toTopOf="@+id/descriptionRecording"
        app:layout_constraintEnd_toStartOf="@+id/uploadingButton"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.60" />

</androidx.constraintlayout.widget.ConstraintLayout>